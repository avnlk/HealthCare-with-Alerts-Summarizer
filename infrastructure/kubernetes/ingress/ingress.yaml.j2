apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: healthcare-ingress
  namespace: healthcare
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
    nginx.ingress.kubernetes.io/proxy-body-size: "10m"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "300"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "300"
    nginx.ingress.kubernetes.io/websocket-services: "vitals-generator"
spec:
  rules:
    - host: healthcare.example.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: frontend
                port:
                  number: 80
          - path: /api/vitals
            pathType: Prefix
            backend:
              service:
                name: vitals-generator
                port:
                  number: 8001
          - path: /api/patients
            pathType: Prefix
            backend:
              service:
                name: vitals-generator
                port:
                  number: 8001
          - path: /ws
            pathType: Prefix
            backend:
              service:
                name: vitals-generator
                port:
                  number: 8001
          - path: /api/alerts
            pathType: Prefix
            backend:
              service:
                name: alert-engine
                port:
                  number: 8002
          - path: /api/summaries
            pathType: Prefix
            backend:
              service:
                name: summarizer-service
                port:
                  number: 8003
          - path: /api/model
            pathType: Prefix
            backend:
              service:
                name: summarizer-service
                port:
                  number: 8003
