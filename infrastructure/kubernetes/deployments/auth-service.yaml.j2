apiVersion: apps/v1
kind: Deployment
metadata:
  name: auth-service
  namespace: healthcare
  labels:
    app: auth-service
    component: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: auth-service
  strategy:
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: auth-service
        component: backend
    spec:
      initContainers:
      - name: wait-for-mongo
        image: busybox:1.36
        command: ['sh', '-c', 'until nc -z -w 2 mongo 27017; do echo "Waiting for MongoDB..."; sleep 2; done;']
      containers:
        - name: auth-service
          image: "{{ docker_registry }}/{{ docker_username }}/auth-service:{{ app_version }}"
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8000
              protocol: TCP
          env:
            - name: MONGODB_URI
              valueFrom:
                secretKeyRef:
                  name: healthcare-secrets
                  key: MONGODB_URI
            - name: JWT_SECRET_KEY
              valueFrom:
                secretKeyRef:
                  name: healthcare-secrets
                  key: JWT_SECRET_KEY
          resources:
            requests:
              cpu: "100m"
              memory: "128Mi"
            limits:
              cpu: "250m"
              memory: "256Mi"
          livenessProbe:
            httpGet:
              path: /health
              port: 8000
            initialDelaySeconds: 30
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: /health
              port: 8000
            initialDelaySeconds: 60
            periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: auth-service
  namespace: healthcare
  labels:
    app: auth-service
spec:
  selector:
    app: auth-service
  ports:
    - port: 8000
      targetPort: 8000
      protocol: TCP
  type: ClusterIP
