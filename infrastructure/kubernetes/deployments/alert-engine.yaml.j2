apiVersion: apps/v1
kind: Deployment
metadata:
  name: alert-engine
  namespace: healthcare
  labels:
    app: alert-engine
    component: backend
spec:
  replicas: 2
  selector:
    matchLabels:
      app: alert-engine
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: alert-engine
        component: backend
    spec:
      containers:
        - name: alert-engine
          image: "{{ docker_registry }}/{{ docker_username }}/alert-engine:{{ app_version }}"
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8002
              protocol: TCP
          env:
            - name: ELASTICSEARCH_URL
              valueFrom:
                configMapKeyRef:
                  name: healthcare-config
                  key: ELASTICSEARCH_URL
            - name: VITALS_SERVICE_URL
              value: "http://vitals-generator:8001"
            - name: ELASTICSEARCH_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: healthcare-secrets
                  key: ELASTICSEARCH_PASSWORD
                  optional: true
            - name: MONGODB_URI
              valueFrom:
                secretKeyRef:
                  name: healthcare-secrets
                  key: MONGODB_URI
            - name: MONGODB_DATABASE
              valueFrom:
                configMapKeyRef:
                  name: healthcare-config
                  key: MONGODB_DATABASE
          resources:
            requests:
              cpu: "100m"
              memory: "256Mi"
            limits:
              cpu: "500m"
              memory: "512Mi"
          livenessProbe:
            httpGet:
              path: /health
              port: 8002
            initialDelaySeconds: 30
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: /health
              port: 8002
            initialDelaySeconds: 5
            periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: alert-engine
  namespace: healthcare
  labels:
    app: alert-engine
spec:
  selector:
    app: alert-engine
  ports:
    - port: 8002
      targetPort: 8002
      protocol: TCP
  type: ClusterIP
